<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".reg.RegFirstPassActivity">
    <TextView
        android:id="@+id/tvConfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Подтвержение аккаунта "
        android:fontFamily="@font/sfprodisplay"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_marginTop="50dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvConfirm"
        app:srcCompat="@drawable/reg_first_pass" />

    <TextView
        android:id="@+id/tvEnterPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/sfprodisplay"
        android:text="Введите пароль  "
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />
    <LinearLayout
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEnterPass" >
        <EditText
            android:id="@+id/etFirstSymbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sfprodisplay"
            android:paddingLeft="3dp"
            android:hint="0"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/shape_grey"/>
        <EditText
            android:id="@+id/etSecondSymbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sfprodisplay"
            android:paddingLeft="3dp"
            android:hint="1"
            android:layout_marginLeft="20dp"
            android:inputType="number"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/shape_grey"/>
        <EditText
            android:id="@+id/etThirdSymbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sfprodisplay"
            android:paddingLeft="3dp"
            android:inputType="number"
            android:hint="2"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/shape_grey"/>
        <EditText
            android:id="@+id/etFourthSymbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sfprodisplay"
            android:paddingLeft="3dp"
            android:inputType="number"
            android:layout_marginLeft="20dp"
            android:hint="3"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:background="@drawable/shape_grey"/>
        <EditText
            android:id="@+id/etFifthSymbol"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:fontFamily="@font/sfprodisplay"
            android:paddingLeft="3dp"
            android:inputType="number"
            android:hint="4"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"
            android:background="@drawable/shape_grey"/>
    </LinearLayout>


    <Button
        android:id="@+id/btnFirstPass"
        android:layout_width="343dp"
        android:layout_height="50dp"
        android:text="Далее"
        android:fontFamily="@font/sfprodisplay"
        android:layout_marginBottom="50dp"
        android:background="@drawable/shape_grey"
        android:backgroundTint="#F8F8F8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>